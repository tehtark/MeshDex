@page "/settings"


@if (!_loaded)
{
    <Loading/>
}
else
{
    // form to show where the library "Assets" folder is located.
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Class="h-100">
        <MudText Typo="Typo.h5">Settings</MudText>
        <MudTextField @bind-Value="Globals.LibraryPath" Label="Default Dictionary Path" Variant="Variant.Outlined" FullWidth Required />
        <MudButton OnClick="@(() => SaveSettings())" Color="Color.Primary" Variant="Variant.Filled" FullWidth>Save Settings</MudButton>
    </MudStack>
}

@code{

    private bool _loaded = false;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(Globals.DefaultDelay);

        _loaded = true;
    }

    private void SaveSettings()
    {
        
    }
}